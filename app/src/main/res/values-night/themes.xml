<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SingleAntennaRTK" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomTransparentSwitch" parent="Theme.AppCompat.Light">
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:track">@android:color/transparent</item>
        <item name="android:switchMinWidth">0dp</item>
        <item name="android:switchPadding">0dp</item>
        <item name="android:switchTextAppearance">@null</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SingleAntennaRTK" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SingleAntennaRTK" parent="Base.Theme.SingleAntennaRTK" />

    <style name="ToolbarTitleText">
        <item name="android:textSize">20sp</item> <!-- 设置文字大小 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 设置文字颜色 -->
        <!-- 其他字体样式设置 -->
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BluetoothFunFragment.DataAcceptanceFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/ReceiveGGATextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$GNGGA"/>

    <TextView
        android:id="@+id/ReceiveRMCTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$GNRMC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReceiveGGATextView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/lonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="经度: "
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ReceiveRMCTextView"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/latText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="纬度: "
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lonText"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="距离: "
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/latText"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/RecordTestPointButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录测试点"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceText" />


</androidx.constraintlayout.widget.ConstraintLayout>